{{#if isVisible}}
<li {{#if children}}class="tc-ctl-lcat-node tc-collapsed"{{else}}class="tc-ctl-lcat-node tc-ctl-lcat-leaf"{{/if}} data-layer-name="{{name}}" data-layer-uid="{{uid}}">
    {{#if children}}<button class="tc-ctl-lcat-collapse-btn"></button>{{/if}}
    <span data-tooltip="{{#if name}}{{i18n "clickToAddToMap"}}{{/if}}">{{title}}</span>{{#if name}}<button title="{{i18n "infoFromThisLayer"}}" class="tc-ctl-lcat-btn-info"></button>{{/if}}
    <ul class="tc-ctl-lcat-branch tc-collapsed">
        {{#each children}}
            {{> tc-ctl-lcat-node}}
        {{/each}}
    </ul>
</li>
{{/if}}